//Heapify 

heapify(array ,size,i){
    int largest = i  ;
    int left = 2*i +1 ;
    int right = 2*i +2 ;
    if(left<N && arr[left]>arr[right]){
        largest=left ;
    }

    if(right<N && arr[right]>arr[left]){
        largest = right ;
    }

    if(largest!i){
        swap(arr[i],arr[largest]) ;
        heapify(arr,N,largest) ;
    }

    
}
